                            ${game.pcDlcLinkEnabled && game.pcDlcLink ? `<a href="${game.pcDlcLink}" target="_blank" class="download-btn">تحميل الإضافات <span>${game.pcDlcCode || 'G00.00'}</span></a>` : ''}
                            ${game.pcTranslationLinkEnabled && game.pcTranslationLink ? `<a href="${game.pcTranslationLink}" target="_blank" class="download-btn">تحميل الترجمة <span>${game.pcTranslationCode || 'G00.00'}</span></a>` : ''}
                        </div>
                    </div>
                `;
            }
            
            // XBOX
            if (game.platform.includes('XBOX') && (game.xboxGameLinkEnabled || game.xboxUpdateLinkEnabled || game.xboxDlcLinkEnabled || game.xboxTranslationLinkEnabled)) {
                buttonsHtml += `
                    <div class="download-section">
                        <h3>XBOX</h3>
                        <div class="download-buttons">
                            ${game.xboxGameLinkEnabled && game.xboxGameLink ? `<a href="${game.xboxGameLink}" target="_blank" class="download-btn">تحميل اللعبة <span>${game.xboxGameCode || 'G00.00'}</span></a>` : ''}
