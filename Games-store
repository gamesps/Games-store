                            ${game.ps3DlcLinkEnabled && game.ps3DlcLink ? `<a href="${game.ps3DlcLink}" target="_blank" class="download-btn">تحميل الإضافات <span>${game.ps3DlcCode || 'G00.00'}</span></a>` : ''}
                            ${game.ps3TranslationLinkEnabled && game.ps3TranslationLink ? `<a href="${game.ps3TranslationLink}" target="_blank" class="download-btn">تحميل الترجمة <span>${game.ps3TranslationCode || 'G00.00'}</span></a>` : ''}
                        </div>
                    </div>
                `;
            }
            
            // PS4
            if (game.platform.includes('PS4') && (game.ps4GameLinkEnabled || game.ps4UpdateLinkEnabled || game.ps4DlcLinkEnabled || game.ps4TranslationLinkEnabled)) {
                buttonsHtml += `
                    <div class="download-section">
                        <h3>PS4</h3>
                        <div class="download-buttons">
                            ${game.ps4GameLinkEnabled && game.ps4GameLink ? `<a href="${game.ps4GameLink}" target="_blank" class="download-btn">تحميل اللعبة <span>${game.ps4GameCode || 'G00.00'}</span></a>` : ''}
                            ${game.ps4UpdateLinkEnabled && game.ps4UpdateLink ? `<a href="${game.ps4UpdateLink}" target="_blank" class="download-btn">تحميل التحديث <span>${game.ps4UpdateCode || 'G00.00'}</span></a>` : ''}
                            ${game.ps4DlcLinkEnabled && game.ps4DlcLink ? `<a href="${game.ps4DlcLink}" target="_blank" class="download-btn">تحميل الإضافات <span>${game.ps4DlcCode || 'G00.00'}</span></a>` : ''}
                            ${game.ps4TranslationLinkEnabled && game.ps4TranslationLink ? `<a href="${game.ps4TranslationLink}" target="_blank" class="download-btn">تحميل الترجمة <span>${game.ps4TranslationCode || 'G00.00'}</span></a>` : ''}
                        </div>
                    </div>
                `;
            }
            
            // PS5
            if (game.platform.includes('PS5') && (game.ps5GameLinkEnabled || game.ps5UpdateLinkEnabled || game.ps5DlcLinkEnabled || game.ps5TranslationLinkEnabled)) {
                buttonsHtml += `
                    <div class="download-section">
                        <h3>PS5</h3>
                        <div class="download-buttons">
