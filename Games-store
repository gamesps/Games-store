                        subtitles: ['عربي', 'انجليزي'],
                        ps4GameLinkEnabled: true,
                        ps4GameLink: '#',
                        ps4UpdateLinkEnabled: false,
                        ps4DlcLinkEnabled: false,
                        ps4TranslationLinkEnabled: false,
                        hasUpdate: false
                    },
                    {
                        id: generateId(),
                        name: 'The Last of Us Part II',
                        image: 'https://image.api.playstation.com/vulcan/ap/rnd/202010/0222/A0dD9msotpY2bShSLXRFM4w7.png',
