            return buttonsHtml;
        }
        
        // عرض تفاصيل التحديث
        function showUpdateDetails(updateId) {
            const update = updates.find(u => u.id === updateId);
            if (!update) return;
            
            const game = games.find(g => g.id === update.gameId);
            
            document.getElementById('modalGameTitle').textContent = `${update.gameName} - تحديث ${update.version}`;
            
            const gameDetails = document.getElementById('gameDetails');
            gameDetails.innerHTML = `
                <div class="detail-row">
                    <span class="detail-label">اللعبة الأصلية:</span>
                    <span>${update.gameName}</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">رقم التحديث:</span>
                    <span>${update.version}</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">حجم التحديث:</span>
                    <span>${update.size} جيجابايت</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">المنصة:</span>
                    <span>${update.platform}</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">تاريخ الإضافة:</span>
                    <span>${new Date(update.dateAdded).toLocaleDateString('ar-EG')}</span>
                </div>
                
                <div class="download-section">
                    <h3>تحميل التحديث</h3>
                    <div class="download-buttons">
                        <a href="${update.link}" target="_blank" class="download-btn">تحميل التحديث <span>${update.size}G</span></a>
                    </div>
                </div>
                
                <div class="action-buttons">
                    <button class="action-btn delete-btn" onclick="deleteUpdate('${update.id}')">حذف التحديث</button>
                </div>
            `;
            
            gameModal.classList.add('active');
        }
        
        // إضافة لعبة جديدة
        addGameBtn.addEventListener('click', () => {
            document.getElementById('formModalTitle').textContent = 'إضافة لعبة جديدة';
            gameForm.reset();
            document.getElementById('gameId').value = '';
            imagePreview.style.display = 'none';
            
            // إخفاء جميع أقسام المنصات
            document.querySelectorAll('.platform-content').forEach(content => {
                content.classList.add('hidden');
            });
            
            // إعادة تعيين رموز التبديل
            document.querySelectorAll('.platform-toggle').forEach(toggle => {
                toggle.textContent = '▶';
            });
            
            gameFormModal.classList.add('active');
        });
        
        // تعديل لعبة
        function editGame(gameId) {
            const game = games.find(g => g.id === gameId);
            if (!game) return;
            
            document.getElementById('formModalTitle').textContent = 'تعديل اللعبة';
            document.getElementById('gameId').value = game.id;
            document.getElementById('gameName').value = game.name;
            document.getElementById('gameImage').value = game.image;
            document.getElementById('gameDescription').value = game.description || '';
            document.getElementById('gamePerspective').value = game.perspective || '';
            document.getElementById('gamePlayStyle').value = game.playStyle || '';
            document.getElementById('gameSeries').value = game.series || '';
            document.getElementById('psSize').value = game.psSize || '';
            document.getElementById('pcSize').value = game.pcSize || '';
            
            // تعبئة بيانات جميع المنصات
            platforms.forEach(platform => {
                const platformLower = platform.toLowerCase();
                
                // أكواد المنصة
                document.getElementById(`${platformLower}GameCode`).value = game[`${platformLower}GameCode`] || '';
                document.getElementById(`${platformLower}UpdateCode`).value = game[`${platformLower}UpdateCode`] || '';
                document.getElementById(`${platformLower}DlcCode`).value = game[`${platformLower}DlcCode`] || '';
                document.getElementById(`${platformLower}TranslationCode`).value = game[`${platformLower}TranslationCode`] || '';
                
                // روابط المنصة
                document.getElementById(`${platformLower}GameLinkEnabled`).checked = game[`${platformLower}GameLinkEnabled`] || false;
                document.getElementById(`${platformLower}GameLink`).value = game[`${platformLower}GameLink`] || '';
                document.getElementById(`${platformLower}UpdateLinkEnabled`).checked = game[`${platformLower}UpdateLinkEnabled`] || false;
                document.getElementById(`${platformLower}UpdateLink`).value = game[`${platformLower}UpdateLink`] || '';
                document.getElementById(`${platformLower}DlcLinkEnabled`).checked = game[`${platformLower}DlcLinkEnabled`] || false;
                document.getElementById(`${platformLower}DlcLink`).value = game[`${platformLower}DlcLink`] || '';
                document.getElementById(`${platformLower}TranslationLinkEnabled`).checked = game[`${platformLower}TranslationLinkEnabled`] || false;
                document.getElementById(`${platformLower}TranslationLink`).value = game[`${platformLower}TranslationLink`] || '';
            });
            
            // تحديد المنصات المختارة
            document.querySelectorAll('input[name="platforms"]').forEach(checkbox => {
                checkbox.checked = game.platform.includes(checkbox.value);
                if (checkbox.checked) {
                    checkbox.closest('.platform-checkbox').classList.add('selected');
                } else {
                    checkbox.closest('.platform-checkbox').classList.remove('selected');
                }
            });
            
            // عرض الصورة إذا كانت موجودة
            if (game.image) {
                imagePreview.src = game.image;
                imagePreview.style.display = 'block';
            }
            
            // تحديد التصنيفات
            document.querySelectorAll('input[name="category"]').forEach(checkbox => {
                checkbox.checked = game.categories && game.categories.includes(checkbox.value);
            });
            
            // تحديد لغات الدبلجة
            document.querySelectorAll('input[name="dubbing"]').forEach(checkbox => {
                checkbox.checked = game.dubbing && game.dubbing.includes(checkbox.value);
            });
            
            // تحديد لغات الترجمة
            document.querySelectorAll('input[name="subtitles"]').forEach(checkbox => {
                checkbox.checked = game.subtitles && game.subtitles.includes(checkbox.value);
            });
            
            // إظهار أقسام المنصات المستخدمة في اللعبة
            game.platform.split('/').forEach(platform => {
                const platformLower = platform.toLowerCase();
                const content = document.querySelector(`#${platformLower}GameCode`).closest('.platform-content');
                if (content) {
                    content.classList.remove('hidden');
                    content.previousElementSibling.querySelector('.platform-toggle').textContent = '▼';
                }
            });
            
            gameModal.classList.remove('active');
            gameFormModal.classList.add('active');
        }
        
        // حفظ اللعبة (إضافة أو تعديل)
        gameForm.addEventListener('submit', (e) => {
            e.preventDefault();
            
            const gameId = document.getElementById('gameId').value;
            
            // جمع التصنيفات المحددة
            const selectedCategories = [];
            document.querySelectorAll('input[name="category"]:checked').forEach(checkbox => {
                selectedCategories.push(checkbox.value);
            });
            
            // جمع المنصات المحددة
            const selectedPlatforms = [];
            document.querySelectorAll('input[name="platforms"]:checked').forEach(checkbox => {
                selectedPlatforms.push(checkbox.value);
            });
            
            // جمع لغات الدبلجة المحددة
            const selectedDubbing = [];
            document.querySelectorAll('input[name="dubbing"]:checked').forEach(checkbox => {
                selectedDubbing.push(checkbox.value);
            });
            
            // جمع لغات الترجمة المحددة
            const selectedSubtitles = [];
            document.querySelectorAll('input[name="subtitles"]:checked').forEach(checkbox => {
                selectedSubtitles.push(checkbox.value);
            });
            
            const gameData = {
                id: gameId || generateId(),
                name: document.getElementById('gameName').value,
                image: document.getElementById('gameImage').value,
                description: document.getElementById('gameDescription').value,
                categories: selectedCategories,
                platform: selectedPlatforms.join('/'),
                perspective: document.getElementById('gamePerspective').value,
                playStyle: document.getElementById('gamePlayStyle').value,
                series: document.getElementById('gameSeries').value,
                psSize: document.getElementById('psSize').value,
                pcSize: document.getElementById('pcSize').value,
                dubbing: selectedDubbing,
                subtitles: selectedSubtitles
            };
            
            // جمع بيانات جميع المنصات
            platforms.forEach(platform => {
                const platformLower = platform.toLowerCase();
                
                // أكواد المنصة
                gameData[`${platformLower}GameCode`] = document.getElementById(`${platformLower}GameCode`).value;
                gameData[`${platformLower}UpdateCode`] = document.getElementById(`${platformLower}UpdateCode`).value;
                gameData[`${platformLower}DlcCode`] = document.getElementById(`${platformLower}DlcCode`).value;
                gameData[`${platformLower}TranslationCode`] = document.getElementById(`${platformLower}TranslationCode`).value;
                
                // روابط المنصة
                gameData[`${platformLower}GameLinkEnabled`] = document.getElementById(`${platformLower}GameLinkEnabled`).checked;
                gameData[`${platformLower}GameLink`] = document.getElementById(`${platformLower}GameLink`).value;
                gameData[`${platformLower}UpdateLinkEnabled`] = document.getElementById(`${platformLower}UpdateLinkEnabled`).checked;
                gameData[`${platformLower}UpdateLink`] = document.getElementById(`${platformLower}UpdateLink`).value;
                gameData[`${platformLower}DlcLinkEnabled`] = document.getElementById(`${platformLower}DlcLinkEnabled`).checked;
                gameData[`${platformLower}DlcLink`] = document.getElementById(`${platformLower}DlcLink`).value;
                gameData[`${platformLower}TranslationLinkEnabled`] = document.getElementById(`${platformLower}TranslationLinkEnabled`).checked;
                gameData[`${platformLower}TranslationLink`] = document.getElementById(`${platformLower}TranslationLink`).value;
            });
            
            if (gameId) {
                // تعديل لعبة موجودة
                const index = games.findIndex(g => g.id === gameId);
                if (index !== -1) {
                    games[index] = gameData;
                }
            } else {
                // إضافة لعبة جديدة
                games.push(gameData);
            }
            
            saveGames();
            displayGames(games);
            gameFormModal.classList.remove('active');
        });
        
        // فتح نافذة إضافة تحديث
        function openUpdateModal(gameId = null) {
            updateGameSelect.innerHTML = '';
            games.forEach(game => {
                const option = document.createElement('option');
                option.value = game.id;
                option.textContent = game.name;
                if (gameId && game.id === gameId) {
                    option.selected = true;
                }
                updateGameSelect.appendChild(option);
            });
            
            updateModal.classList.add('active');
            if (gameModal.classList.contains('active')) {
                gameModal.classList.remove('active');
            }
        }
        
        addUpdateBtn.addEventListener('click', () => {
            openUpdateModal();
        });
        
        // إضافة تحديث للعبة
        confirmUpdateBtn.addEventListener('click', () => {
            const gameId = updateGameSelect.value;
            const updateVersion = document.getElementById('updateVersion').value;
            const updateSize = document.getElementById('updateSize').value;
            const updateLink = document.getElementById('updateLink').value;
            const updatePlatform = document.getElementById('updatePlatform').value;
            
            if (!gameId || !updateVersion || !updateSize || !updateLink) {
                alert('يرجى ملء جميع الحقول المطلوبة');
                return;
            }
            
            const game = games.find(g => g.id === gameId);
            if (game) {
                // إنشاء كائن تحديث جديد
                const update = {
                    id: generateId(),
                    gameId: gameId,
                    gameName: game.name,
                    gameImage: game.image,
                    version: updateVersion,
                    size: updateSize,
                    link: updateLink,
                    platform: updatePlatform,
                    dateAdded: new Date().toISOString()
                };
                
                // إضافة التحديث إلى مصفوفة التحديثات
                updates.push(update);
                localStorage.setItem('gameUpdates', JSON.stringify(updates));
                
                updateModal.classList.remove('active');
                alert('تم إضافة التحديث بنجاح!');
                
                // إذا كانت صفحة التحديثات نشطة، قم بتحديث العرض
                if (document.getElementById('updatesPage').classList.contains('active')) {
                    displayUpdates();
                }
            }
        });
        
        // حذف لعبة
        deleteGameBtn.addEventListener('click', () => {
            deleteGameSelect.innerHTML = '';
            games.forEach(game => {
                const option = document.createElement('option');
                option.value = game.id;
                option.textContent = game.name;
                deleteGameSelect.appendChild(option);
            });
            
            deleteModal.classList.add('active');
        });
        
        function deleteGame(gameId) {
            games = games.filter(game => game.id !== gameId);
            saveGames();
            displayGames(games);
            if (gameModal.classList.contains('active')) {
                gameModal.classList.remove('active');
            }
        }
        
        confirmDeleteBtn.addEventListener('click', () => {
            const gameId = deleteGameSelect.value;
            if (gameId) {
                deleteGame(gameId);
                deleteModal.classList.remove('active');
            }
        });
        
        // حذف تحديث
        function deleteUpdate(updateId) {
            updates = updates.filter(update => update.id !== updateId);
            localStorage.setItem('gameUpdates', JSON.stringify(updates));
            displayUpdates();
            gameModal.classList.remove('active');
        }
        
        // تصدير البيانات
        exportDataBtn.addEventListener('click', () => {
            const data = {
                games: games,
                updates: updates,
                activationCodes: activationCodes
            };
            const dataStr = JSON.stringify(data, null, 2);
            const dataBlob = new Blob([dataStr], {type: 'application/json'});
            
            const url = URL.createObjectURL(dataBlob);
            const link = document.createElement('a');
            link.href = url;
            link.download = 'ps4_games_backup.json';
            link.click();
            
            URL.revokeObjectURL(url);
        });
        
        // استيراد البيانات
        importDataBtn.addEventListener('click', () => {
            const input = document.createElement('input');
            input.type = 'file';
            input.accept = '.json';
            
            input.addEventListener('change', (e) => {
                const file = e.target.files[0];
                if (!file) return;
                
                const reader = new FileReader();
                reader.onload = (event) => {
                    try {
                        const importedData = JSON.parse(event.target.result);
                        if (Array.isArray(importedData)) {
                            // دعم الملفات القديمة
                            games = importedData;
                        } else if (importedData.games && importedData.updates) {
                            // دعم الملفات الجديدة
                            games = importedData.games;
                            updates = importedData.updates;
                            activationCodes = importedData.activationCodes || [];
                        } else {
                            alert('ملف غير صالح. يرجى اختيار ملف JSON صحيح.');
                            return;
                        }
                        
                        saveGames();
                        localStorage.setItem('gameUpdates', JSON.stringify(updates));
                        localStorage.setItem('activationCodes', JSON.stringify(activationCodes));
                        displayGames(games);
                        alert('تم استيراد البيانات بنجاح!');
                    } catch (error) {
                        alert('خطأ في قراءة الملف. يرجى التأكد من صحة الملف.');
                    }
                };
                reader.readAsText(file);
            });
            
            input.click();
        });
        
        // إنشاء رمز التنشيط
        createCodeBtn.addEventListener('click', () => {
            // البحث عن كلمة مرور غير مستخدمة
            const availablePassword = passwords.find(pwd => !pwd.used);
            
            if (!availablePassword) {
                alert('لا توجد كلمات مرور متاحة. يرجى إنشاء كلمات مرور جديدة أولاً.');
                return;
            }
            
            // إنشاء رمز عشوائي مكون من 16 حرفًا
            const code = generateActivationCode();
            const creationDate = new Date();
            const expiryDate = new Date();
            expiryDate.setMonth(expiryDate.getMonth() + 1); // إضافة شهر واحد
            
            // تحديث حالة كلمة المرور إلى مستخدمة
            availablePassword.used = true;
            availablePassword.usedAt = new Date().toISOString();
            availablePassword.activationCode = code;
            
            // حفظ الرمز في قاعدة البيانات
            const activationCode = {
                id: generateId(),
                code: code,
                password: availablePassword.password,
                creationDate: creationDate.toISOString(),
                expiryDate: expiryDate.toISOString(),
                isActive: true
            };
            
            activationCodes.push(activationCode);
            localStorage.setItem('activationCodes', JSON.stringify(activationCodes));
            localStorage.setItem('generatedPasswords', JSON.stringify(passwords));
            
            // عرض الرمز في النافذة المنبثقة
            document.getElementById('generatedCode').textContent = code;
            document.getElementById('passwordSource').innerHTML = `
                <strong>مصدر كلمة المرور:</strong> ${availablePassword.password}
                <br><small>تم استخدام هذه الكلمة من مجموعة كلمات المرور المخزنة</small>
            `;
            document.getElementById('codeCreationDate').textContent = creationDate.toLocaleDateString('ar-EG');
            document.getElementById('codeExpiryDate').textContent = expiryDate.toLocaleDateString('ar-EG');
            
            codeModal.classList.add('active');
            
            // تحديث عرض كلمات المرور
            updatePasswordsList();
        });
        
        // نسخ الرمز إلى الحافظة
        copyCodeBtn.addEventListener('click', () => {
            const code = document.getElementById('generatedCode').textContent;
            navigator.clipboard.writeText(code).then(() => {
                alert('تم نسخ الرمز إلى الحافظة!');
            }).catch(err => {
                console.error('فشل في نسخ الرمز: ', err);
            });
        });
        
        // وظيفة لإنشاء رمز تنشيط عشوائي
        function generateActivationCode() {
            const chars = 'ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789';
            let result = '';
            for (let i = 0; i < 16; i++) {
                result += chars.charAt(Math.floor(Math.random() * chars.length));
                if ((i + 1) % 4 === 0 && i !== 15) {
                    result += '-';
                }
            }
            return result;
        }
        
        // وظيفة للتحقق من صلاحية الرموز
        function checkActivationCodes() {
            const now = new Date();
            activationCodes.forEach(code => {
                if (new Date(code.expiryDate) < now) {
                    code.isActive = false;
                }
            });
            localStorage.setItem('activationCodes', JSON.stringify(activationCodes));
        }
        
        // نظام كلمات المرور
        createPasswordsBtn.addEventListener('click', () => {
            updatePasswordsDisplay();
            passwordsModal.classList.add('active');
        });
        
        // إنشاء 1000 كلمة مرور
        generatePasswordsBtn.addEventListener('click', () => {
            const progressContainer = document.getElementById('progressContainer');
            const progressFill = document.getElementById('progressFill');
            const progressText = document.getElementById('progressText');
            
            progressContainer.style.display = 'block';
            progressFill.style.width = '0%';
            progressText.textContent = '0%';
            
            // إنشاء كلمات المرور بشكل تدريجي مع عرض التقدم
            const totalPasswords = 1000;
            const batchSize = 100;
            let generatedCount = 0;
            
            const generateBatch = () => {
                for (let i = 0; i < batchSize && generatedCount < totalPasswords; i++) {
                    const password = generateRandomPassword();
                    passwords.push({
                        id: generateId(),
                        password: password,
                        createdAt: new Date().toISOString(),
                        used: false
                    });
                    generatedCount++;
                    
                    // تحديث شريط التقدم
                    const progress = (generatedCount / totalPasswords) * 100;
                    progressFill.style.width = `${progress}%`;
                    progressText.textContent = `${Math.round(progress)}%`;
                }
                
                if (generatedCount < totalPasswords) {
                    // استمرار إنشاء الدفعات التالية
                    setTimeout(generateBatch, 10);
                } else {
                    // حفظ كلمات المرور في التخزين المحلي
                    localStorage.setItem('generatedPasswords', JSON.stringify(passwords));
                    
                    // تحديث العرض
                    updatePasswordsDisplay();
                    
                    // إخفاء شريط التقدم بعد ثانية
                    setTimeout(() => {
                        progressContainer.style.display = 'none';
                        alert('تم إنشاء 1000 كلمة مرور بنجاح!');
                    }, 1000);
                }
            };
            
            // بدء عملية الإنشاء
            generateBatch();
        });
        
        // استيراد كلمات المرور كملف CSV
        exportPasswordsBtn.addEventListener('click', () => {
            if (passwords.length === 0) {
                alert('لا توجد كلمات مرور لاستيرادها');
                return;
            }
            
            // إنشاء محتوى CSV
            let csvContent = "كلمة المرور,تاريخ الإنشاء,الحالة\n";
            passwords.forEach(pwd => {
                const date = new Date(pwd.createdAt).toLocaleDateString('ar-EG');
                const status = pwd.used ? 'مستخدمة' : 'متاحة';
                csvContent += `"${pwd.password}","${date}","${status}"\n`;
            });
            
            // إنشاء ملف CSV وتنزيله
            const blob = new Blob([csvContent], { type: 'text/csv;charset=utf-8;' });
            const url = URL.createObjectURL(blob);
            const link = document.createElement('a');
            link.href = url;
            link.download = 'كلمات_المرور.csv';
            link.click();
            
            URL.revokeObjectURL(url);
        });
        
        // وظيفة لإنشاء كلمة مرور عشوائية
        function generateRandomPassword() {
            const length = 12;
            const charset = "abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789!@#$%^&*";
            let password = "";
            
            for (let i = 0; i < length; i++) {
                const randomIndex = Math.floor(Math.random() * charset.length);
                password += charset[randomIndex];
            }
            
            return password;
        }
        
        // تحديث عرض كلمات المرور
        function updatePasswordsDisplay() {
            const availablePasswords = passwords.filter(pwd => !pwd.used).length;
            const totalPasswords = passwords.length;
            
            document.getElementById('passwordsCount').textContent = availablePasswords;
            document.getElementById('totalPasswords').textContent = totalPasswords;
            updatePasswordsList();
        }
        
        // تحديث قائمة كلمات المرور المعروضة
        function updatePasswordsList() {
            const passwordsList = document.getElementById('passwordsList');
            passwordsList.innerHTML = '';
            
            if (passwords.length === 0) {
                passwordsList.innerHTML = '<p style="text-align: center;">لا توجد كلمات مرور</p>';
                return;
            }
            
            // عرض أول 20 كلمة مرور فقط لتجنب بطء الأداء
            const displayCount = Math.min(passwords.length, 20);
            for (let i = 0; i < displayCount; i++) {
                const password = passwords[i];
                const passwordItem = document.createElement('div');
                passwordItem.className = 'password-item';
                
                passwordItem.innerHTML = `
                    <div class="password-text">${i + 1}. ${password.password}</div>
                    ${password.used ? '<span class="password-used">مستخدمة</span>' : ''}
                `;
                
                passwordsList.appendChild(passwordItem);
            }
            
            if (passwords.length > 20) {
                const moreText = document.createElement('div');
                moreText.className = 'password-item';
                moreText.style.textAlign = 'center';
                moreText.style.fontStyle = 'italic';
                moreText.textContent = `... و ${passwords.length - 20} كلمة مرور أخرى`;
                passwordsList.appendChild(moreText);
            }
        }
        
        // رفع الصور ومعاينتها
        gameImageUpload.addEventListener('change', (e) => {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = (event) => {
                    imagePreview.src = event.target.result;
                    imagePreview.style.display = 'block';
                    document.getElementById('gameImage').value = event.target.result;
                };
                reader.readAsDataURL(file);
            }
        });
        
        // إغلاق النوافذ
        closeModalBtn.addEventListener('click', () => gameModal.classList.remove('active'));
        closeFormModalBtn.addEventListener('click', () => gameFormModal.classList.remove('active'));
        closeUpdateModalBtn.addEventListener('click', () => updateModal.classList.remove('active'));
        closeDeleteModalBtn.addEventListener('click', () => deleteModal.classList.remove('active'));
        closeDeleteUpdateModalBtn.addEventListener('click', () => deleteUpdateModal.classList.remove('active'));
        closeCodeModalBtn.addEventListener('click', () => codeModal.classList.remove('active'));
        closeCodeModalConfirmBtn.addEventListener('click', () => codeModal.classList.remove('active'));
        closePasswordsModalBtn.addEventListener('click', () => passwordsModal.classList.remove('active'));
        cancelFormBtn.addEventListener('click', () => gameFormModal.classList.remove('active'));
        cancelUpdateBtn.addEventListener('click', () => updateModal.classList.remove('active'));
        cancelDeleteBtn.addEventListener('click', () => deleteModal.classList.remove('active'));
        cancelDeleteUpdateBtn.addEventListener('click', () => deleteUpdateModal.classList.remove('active'));
        
        // النقر خارج النافذة لإغلاقها
        window.addEventListener('click', (e) => {
            if (e.target === gameModal) gameModal.classList.remove('active');
            if (e.target === gameFormModal) gameFormModal.classList.remove('active');
            if (e.target === updateModal) updateModal.classList.remove('active');
            if (e.target === deleteModal) deleteModal.classList.remove('active');
            if (e.target === deleteUpdateModal) deleteUpdateModal.classList.remove('active');
            if (e.target === codeModal) codeModal.classList.remove('active');
            if (e.target === passwordsModal) passwordsModal.classList.remove('active');
        });
        
        // وظائف مساعدة
        function generateId() {
            return Date.now().toString(36) + Math.random().toString(36).substr(2);
        }
        
        function saveGames() {
            localStorage.setItem('ps4Games', JSON.stringify(games));
        }
        
        // تهيئة التطبيق
        function init() {
            createPlatformButtons();
            createPlatformSelection();
            displayGames(games);
            displayUpdates();
            checkActivationCodes(); // التحقق من صلاحية الرموز عند بدء التشغيل
            
            // إضافة بعض الألعاب الافتراضية إذا لم تكن هناك ألعاب
            if (games.length === 0) {
                const defaultGames = [
                    {
                        id: generateId(),
                        name: 'God of War',
