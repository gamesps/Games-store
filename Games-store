                        <div class="download-buttons">
                            ${game.pcGameLinkEnabled && game.pcGameLink ? `<a href="${game.pcGameLink}" target="_blank" class="download-btn">تحميل اللعبة <span>${game.pcGameCode || 'G00.00'}</span></a>` : ''}
